<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mark.mroz.quickmeets.customeEventLayout">

    <TextView
        android:id="@+id/textView_SportName"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Event Name"
        android:textSize="20sp"
        android:layout_alignTop="@+id/iconView"
        android:layout_alignStart="@+id/textView_EventDes" />

    <ImageView
        android:id="@+id/iconView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_EventDes"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Description"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/iconView"
        android:layout_toStartOf="@+id/join_button"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_alignTop="@+id/textView_SportName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/textView_EventDes" />
</RelativeLayout>
